generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String
  password  String
  createdAt DateTime @default(now())
  Post      Post[]
}

model Post {
  id          String   @id @default(uuid())
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  title       String
  description String
  createdAt   DateTime @default(now())
}
